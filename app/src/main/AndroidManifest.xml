<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.harshit.chicagotransit" >

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".Spinner"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AllBusRoutes"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.harshit.chicagotransit.ALLBUSROUTES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".InServiceTrains"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Menu"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.harshit.chicagotransit.MENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ServiceTrains"
            android:label="@string/app_name">
            <intent-filter>
            <action android:name="com.example.harshit.chicagotransit.SERVICETRAINS" />
            <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayBusList"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.harshit.chicagotransit.DISPLAYBUSLIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GetRouteDirection"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.harshit.chicagotransit.GETROUTEDIRECTION" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GetRouteDirectionDisplay"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.harshit.chicagotransit.GETROUTEDIRECTIONDISPLAY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BusStopList"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.harshit.chicagotransit.BUSSTOPLIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BusStopListDisplay"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.harshit.chicagotransit.BUSSTOPLISTDISPLAY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayTrainList"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.example.harshit.chicagotransit.DISPLAYTRAINLIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
